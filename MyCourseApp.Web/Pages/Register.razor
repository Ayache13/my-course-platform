@page "/register"
@inject NavigationManager Navigation

<h3 class="text-center mb-4">اختر نوع الحساب</h3>

<div class="d-flex justify-content-center gap-5">
    <div class="card p-4 shadow text-center" style="width: 250px; cursor: pointer;" @onclick="GoToStudentRegister">
        <h5>طالب</h5>
        <p>أنشئ حساب طالب لتصفح الدورات والانضمام إليها</p>
    </div>

    <div class="card p-4 shadow text-center" style="width: 250px; cursor: pointer;" @onclick="GoToTeacherRegister">
        <h5>أستاذ</h5>
        <p>أنشئ حساب أستاذ لعرض دوراتك وإدارتها</p>
    </div>
</div>

@code {
    void GoToStudentRegister() => Navigation.NavigateTo("/register/student");
    void GoToTeacherRegister() => Navigation.NavigateTo("/register/teacher");
}
